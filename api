youtube-search.js
export default async function handler(req, res) {
  const { query, pageToken, publishedAfter } = req.query;
  const apiKey = process.env.YT_API_KEY;

  const url = `https://www.googleapis.com/youtube/v3/search?key=${apiKey}&q=${query}&part=snippet&type=video&maxResults=50${pageToken ? `&pageToken=${pageToken}` : ''}${publishedAfter ? `&publishedAfter=${publishedAfter}` : ''}`;

  try {
    const response = await fetch(url);
    const data = await response.json();
    res.status(200).json(data);
  } catch (error) {
    console.error('Error fetching YouTube data:', error);
    res.status(500).json({ error: 'Something went wrong' });
  }
}

